---
import Layout from '../layouts/Layout.astro'
import Footer from '../components/common/Footer.astro'
import Beneficio from '../components/landing-page/Beneficio.astro'
import CalendarioIcon from '../components/icons/Calendario.astro'
import RelojArenaIcon from '../components/icons/RelojArena.astro'
import AyudaIcon from '../components/icons/Ayuda.astro'
---

<Layout title="Inscripción de Asignaturas">
	<main>
		<section id="inicio" class="bg-white dark:bg-gray-900">
			<div
				class="mx-auto grid max-w-screen-xl px-4 py-8 lg:grid-cols-12 lg:gap-8 lg:py-16 xl:gap-0">
				<div class="mr-auto place-self-center lg:col-span-7">
					<h1
						class="mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight md:text-5xl xl:text-6xl">
						Tu portal de <span class="text-primary-500">toma de ramos</span>
					</h1>
					<p class="mb-6 max-w-2xl font-light text-gray-600 md:text-lg lg:mb-8 lg:text-xl">
						Simplifica tu trayectoria universitaria con nuestra plataforma de inscripción de
						asignaturas. Descubre la comodidad y eficiencia en la toma de ramos.
					</p>
					<a
						class="inline-flex items-center justify-center gap-x-2 rounded-xl bg-primary-500 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-600"
						href="/login">
						Inscribete ahora
						<svg
							class="ms-2 h-5 w-5 rtl:rotate-180"
							aria-hidden="true"
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 14 10">
							<path
								stroke="currentColor"
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M1 5h12m0 0L9 1m4 4L9 9"></path>
						</svg></a
					>
				</div>
				<div class="hidden lg:col-span-5 lg:mt-8 lg:flex">
					<div
						class="ml-auto flex aspect-square w-9/12 items-center justify-center rounded-full border-4 border-primary-500 bg-primary-200">
						<p class="my-auto text-center text-2xl font-bold text-white">Insertar foto del memo</p>
					</div>
				</div>
			</div>
		</section>

		<section id="beneficios" class="bg-primary-50">
			<div class="mx-auto max-w-screen-xl px-4 py-8 sm:py-16 lg:px-6">
				<h2 class="mb-4 text-center text-4xl font-extrabold tracking-tight text-gray-900">
					Razones para elegirnos
				</h2>
				<p class="mb-6 text-center text-gray-600 sm:text-xl">
					Descubre los beneficios de nuestra plataforma.
				</p>
				<div class="space-y-8 md:grid md:grid-cols-2 md:gap-8 md:space-y-0 lg:grid-cols-3">
					<Beneficio
						beneficio="Optimización"
						descripcion="Ahorra tiempo y evitando complicaciones innecesarias.">
						<RelojArenaIcon class="h-8 w-auto" />
					</Beneficio>
					<Beneficio
						beneficio="Disponibilidad"
						descripcion="Accede desde cualquier lugar y en cualquier momento.">
						<CalendarioIcon class="h-8 w-auto" />
					</Beneficio>

					<Beneficio
						beneficio="Asistencia"
						descripcion="Obtén asesoramiento de nuestro equipo atento a tus dudas.">
						<AyudaIcon class="h-8 w-auto" />
					</Beneficio>
				</div>
			</div>
		</section>
	</main>
</Layout>
