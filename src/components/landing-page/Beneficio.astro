---
interface Props {
	beneficio: string
	descripcion: string
}

const { beneficio, descripcion } = Astro.props
---

<article class="flex flex-col gap-y-3 rounded-3xl bg-white p-8">
	<div class="mx-auto aspect-square w-1/3 rounded-xl bg-primary-500">
		<slot />
	</div>
	<h3 class="text-center text-xl font-semibold">{beneficio}</h3>
	<p class="text-center opacity-95">
		{descripcion}
	</p>
</article>

</article>
