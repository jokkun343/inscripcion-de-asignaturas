---
interface Props {
	stepName: string
	description: string
	completed: boolean
}

const { stepName, description, completed } = Astro.props
---

<div>
	<div class=`h-2 ${ completed ? 'bg-primary-500' : 'bg-gray-200'} w-full rounded-full`></div>
	<div class="mt-2 flex w-full justify-between">
		<p class="text-sm text-primary-500">{stepName}</p>
		<p class="text-sm">{description}</p>
	</div>
</div>
